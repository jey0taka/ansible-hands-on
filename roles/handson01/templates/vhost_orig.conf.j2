<VirtualHost *:80>
  ServerName {{ vhost_domain }}

  DirectoryIndex index.php index.html

  CustomLog /var/log/httpd/{{ vhost_domain }}-access_log combined
  ErrorLog  /var/log/httpd/{{ vhost_domain }}-error_log

  DocumentRoot {{ vhost_docroot }}{{ vhost_domain }}/public_html

  <Directory "{{ vhost_docroot }}{{ vhost_domain }}/public_html">
    AllowOverride All
    Options FollowSymLinks
    Options -Indexes
    Require all granted
  </Directory>
</VirtualHost>